{
  "name": "ember-artisans",
  "version": "0.0.0",
  "description": "Small wrapper library for utilizing web workers in ember",
  "keywords": [
    "ember-addon"
  ],
  "private": true,
  "license": "MIT",
  "author": "",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "start": "ember server",
    "test": "jest --verbose --coverage --no-watchman --runInBand",
    "test:watch": "jest --watch",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "format:src": "find ./addon/ -name '*.ts*' | xargs prettier --write --config ./.prettierrc --config-precedence file-override",
    "format:test": "find ./test/ -name '*.ts*' | xargs prettier --write --config ./.prettierrc --config-precedence file-override",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": "6.* || 8.* || >= 10.*"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "dependencies": {
    "broccoli-babel-transpiler": "^7.1.0",
    "broccoli-filter": "^1.2.2",
    "broccoli-funnel": "^2.0.1",
    "broccoli-merge-trees": "^3.0.1",
    "broccoli-source": "^1.1.0",
    "broccoli-typescript-compiler": "^4.0.1",
    "ember-cli-babel": "^7.1.3",
    "ember-cli-htmlbars": "^3.0.0",
    "ember-uuid": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@semantic-release/git": "^4.0.1",
    "@types/ember": "^3.0.25",
    "@types/jest": "^22.2.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-cli": "^3.5.1",
    "ember-cli-dependency-checker": "^3.0.0",
    "ember-cli-htmlbars-inline-precompile": "^2.0.0",
    "ember-cli-inject-live-reload": "^2.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-typescript": "^1.5.0",
    "ember-cli-uglify": "^2.1.0",
    "ember-concurrency": "^0.8.22",
    "ember-decorators": "^3.1.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.0",
    "ember-load-initializers": "^1.1.0",
    "ember-resolver": "^5.0.1",
    "ember-source": "^3.3.0",
    "ember-source-channel-url": "^1.1.0",
    "husky": "^1.2.0",
    "jest": "^22.4.2",
    "lint-staged": "^8.1.0",
    "loader.js": "^4.7.0",
    "prettier": "^1.15.2",
    "semantic-release": "^15.9.17",
    "travis-deploy-once": "^4.4.1",
    "ts-jest": "^22.4.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "@test/(.*)": "<rootDir>/test/$1"
    },
    "testRegex": "(/tests/.*spec)\\.ts$",
    "coveragePathIgnorePatterns": [
      "dist",
      "/node_modules/",
      "test"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "addon/**/*.ts": [
      "yarn lint:fix",
      "yarn format:src",
      "git add"
    ],
    "test/**/*.ts": [
      "yarn lint:fix",
      "yarn format:test",
      "git add"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json"
        ]
      }
    ]
  }
}
